{
  "compilerOptions": {
    "outDir": "dist", // Diretório de saída
    "module": "ESNext", // Módulos ES
    "target": "ES6", // Alvo ES6
    "jsx": "react", // Suporte a JSX
    "declaration": true, // Gerar arquivos .d.ts
    "strict": true, // Ativar modo estrito
    "esModuleInterop": true, // Compatibilidade com módulos CommonJS
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"] // Excluir pastas
}
